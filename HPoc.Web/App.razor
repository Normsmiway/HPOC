<Router AppAssembly="@typeof(Program).Assembly" PreferExactMatches="@true">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
        <MudThemeProvider Theme="HalalTheme" />
        <MudDialogProvider />
        <MudSnackbarProvider />
        <MudDialogProvider FullWidth="true"
                           MaxWidth="MaxWidth.Medium"
                           CloseButton="true"
                           DisableBackdropClick="false"
                           NoHeader="false"
                           Position="DialogPosition.Center" />
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(MainLayout)">
            <p>Sorry, there's nothing at this address.</p>

        </LayoutView>
    </NotFound>
</Router>

@code{
    MudTheme HalalTheme = new MudTheme()
    {
        Palette = new Palette()
        {
            Primary = Colors.Teal.Lighten1,
            Secondary = Colors.Orange.Lighten2,
            AppbarBackground = Colors.Teal.Accent4,
            Tertiary = Colors.Orange.Lighten3,
            Success = Colors.LightGreen.Lighten1,
            // Background=Colors.Amber.Accent1,
            Dark = Colors.Red.Lighten2
        },

        //LayoutProperties = new LayoutProperties()
